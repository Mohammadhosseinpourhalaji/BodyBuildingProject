
@{
    Layout = "_LayoutAdmin";
}

@model TrainTypeViewModel

<div class="col-lg-12 col-12 mb-30">
    <div class="box">
        <div class="box-head">
            <h4 class="title">نرخ</h4>
        </div>

        <div class="box-body">
            <div class="col-lg-6 col-md-12 mb-30">
                <div class="box">
                    <div class="box-body">
                        <div class="jsgrid" style="position: relative; height: 610px; width: 100%;">
                            <div class="jsgrid-grid-body" style="height: 465px;">
                                <table class="jsgrid-table">
                                    <thead class="jsgrid-grid-header jsgrid-header-scrollbar">
                                        <tr class="jsgrid-header-row">
                                            <th style="width: 70px;" class="jsgrid-header-cell jsgrid-align-center jsgrid-header-sortable">نوع تمرین</th>
                                            <th style="width: 50px;" class="jsgrid-header-cell jsgrid-align-center jsgrid-header-sortable">قیمت</th>
                                            <th style="width: 10px;" class="jsgrid-header-cell jsgrid-align-center jsgrid-header-sortable"></th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var item in ViewData["TrainTypes"] as List<TrainType>)
                                        {
                                            <tr class="jsgrid-row">
                                                <td style="width: 70px;" class="jsgrid-cell jsgrid-align-right">@item.TypeName</td>
                                                <td style="width: 50px;" class="jsgrid-cell jsgrid-align-right">@item.Price</td>
                                                <td style="width: 10px;" class="jsgrid-cell jsgrid-align-right">
                                                    <a class="edit button button-box button-xs button-dark" asp-action="EditTrainType" asp-route-trainTypeId="@item.Id" asp-controller="Admin"><i class="zmdi zmdi-edit"></i></a>
                                                </td>

                                                @*<td style="width: 30px;" class="jsgrid-cell jsgrid-align-center">
                                                    <a class="edit button button-box button-xs button-dark" href="/Admin/ConfirmDeleteUserTrainSchedule/@(item.Id)/@(trainItems.Id)"><i class="zmdi zmdi-delete"></i></a>
                                                </td>*@
                                            </tr>
                                        }

                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="box-body">
            <form>
                <div class="mbn-20">
                    <div class="col-lg-4 col-12 mb-20">
                        <label>متن نوع تمرین</label>
                        <input type="text" class="form-control" placeholder="متن نوع تمرین" asp-for="TypeName">
                    </div>
                    <div class="col-lg-4 col-12 mb-20">
                        <label>قیمت</label>
                        <input type="text" class="form-control" placeholder="قیمت" asp-for="Price">
                    </div>
                </div>

                <div class="row col-12 mb-20" style="margin-top: 50px">
                    <input type="submit" asp-action="AddNewTrainType" asp-controller="Admin" value="ارسال" class="button button-primary">
                    <input type="submit" value="لغو" class="button button-danger">
                </div>
            </form>
        </div>
    </div>
</div>