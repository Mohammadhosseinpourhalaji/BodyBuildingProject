
@{
    Layout = "_LayoutAdmin";
}

@model TrainTypeViewModel

@{ 
    var trainType = ViewData["TrainTypeSingle"] as TrainType;
}

<div class="col-lg-12 col-12 mb-30">
    <div class="box">
        <div class="box-head">
            <h4 class="title">ویرایش نرخ @trainType.TypeName</h4>
        </div>

        <div class="box-body">
            <form>
                <div class="mbn-20">
                    <div class="col-lg-4 col-12 mb-20">
                        <label>متن نوع تمرین</label>
                        <input type="text" class="form-control" placeholder="متن نوع تمرین" value="@trainType.TypeName" asp-for="TypeName">
                    </div>
                    <div class="col-lg-4 col-12 mb-20">
                        <label>قیمت</label>
                        <input type="text" class="form-control" placeholder="قیمت" value="@trainType.Price" asp-for="Price">
                    </div>
                </div>

                <div class="row col-12 mb-20" style="margin-top: 50px">
                    <input type="submit" asp-action="ConfirmEditTrainType" asp-route-trainTypeId="@trainType.Id" asp-controller="Admin" value="ثبت" class="button button-success">
                    <input type="submit" value="لغو" class="button button-danger">
                </div>
            </form>
        </div>
    </div>
</div>