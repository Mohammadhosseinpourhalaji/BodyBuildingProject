
@{
    Layout = null;
}

@inject UserManager<ApplicationUser> userManager;
@{
    var userapp = userManager.FindByNameAsync(User.Identity.Name).Result;
}
<!doctype html>
<html class="no-js" lang="en">


<head>
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <title>Admin Panel</title>
    <meta name="robots" content="noindex, follow" />
    <meta name="description" content="">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Favicon -->
    <link rel="shortcut icon" type="image/x-icon" href="~/layadmin/assets/images/favicon.ico">

    <!-- CSS
    ============================================ -->
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" href="~/layadmin/assets/css/vendor/bootstrap.min.css">

    <!-- Icon Font CSS -->
    <link rel="stylesheet" href="~/layadmin/assets/css/vendor/material-design-iconic-font.min.css">
    <link rel="stylesheet" href="~/layadmin/assets/css/vendor/font-awesome.min.css">
    <link rel="stylesheet" href="~/layadmin/assets/css/vendor/themify-icons.css">
    <link rel="stylesheet" href="~/layadmin/assets/css/vendor/cryptocurrency-icons.css">

    <!-- Plugins CSS -->
    <link rel="stylesheet" href="~/layadmin/assets/css/plugins/plugins.css">

    <!-- Helper CSS -->
    <link rel="stylesheet" href="~/layadmin/assets/css/helper.css">

    <!-- Main Style CSS -->
    <link rel="stylesheet" href="~/layadmin/assets/css/style.css">

    <!-- Custom Style CSS Only For Demo Purpose -->
    @*<link id="cus-style" rel="stylesheet" href="~/layadmin/assets/css/style-primary.css">*@

</head>

<body dir="rtl" class="side-header-light">

    <div class="main-wrapper">


        <!-- Header Section Start -->
        <div class="header-section">
            <div class="container-fluid">
                <div class="row justify-content-between align-items-center">

                    <!-- Header Logo (Header Left) Start -->
                    <div class="header-logo col-auto">
                        <a href="/Admin">
                            <img src="~/layadmin/assets/images/logo/logo.png" alt="">
                            <img src="~/layadmin/assets/images/logo/logo-light.png" class="logo-light" alt="">
                        </a>
                    </div><!-- Header Logo (Header Left) End -->
                    <!-- Header Right Start -->
                    <div class="header-right flex-grow-1 col-auto">
                        <div class="row justify-content-between align-items-center">

                            <!-- Side Header Toggle & Search Start -->
                            <div class="col-auto">
                                <div class="row align-items-center">

                                    <!--Side Header Toggle-->
                                    <div class="col-auto"><button class="side-header-toggle"><i class="zmdi zmdi-menu"></i></button></div>

                                    <!--Header Search-->
                                    <div class="col-auto">

                                        <div class="header-search">

                                            <button class="header-search-open d-block d-xl-none"><i class="zmdi zmdi-search"></i></button>

                                            <div class="header-search-form">
                                                <form action="#">
                                                    <input type="text" placeholder="جستجو کنید">
                                                    <button><i class="zmdi zmdi-search"></i></button>
                                                </form>
                                                <button class="header-search-close d-block d-xl-none"><i class="zmdi zmdi-close"></i></button>
                                            </div>

                                        </div>
                                    </div>

                                </div>
                            </div><!-- Side Header Toggle & Search End -->
                            <!-- Header Notifications Area Start -->
                            <div class="col-auto">

                                <ul class="header-notification-area">



                                    <!--Mail-->
                                    <li class="adomx-dropdown col-auto">
                                        <a class="toggle" href="#"><i class="zmdi zmdi-email-open"></i><span class="badge"></span></a>

                                        <!-- Dropdown -->
                                        <div class="adomx-dropdown-menu dropdown-menu-mail">
                                            <div class="head">
                                                <h4 class="title">شما 3 ایمیل دارید.</h4>
                                            </div>
                                            <div class="body custom-scroll">
                                                <ul>
                                                    <li>
                                                        <a href="#">
                                                            <div class="image"><img src="~/layadmin/assets/images/avatar/avatar-2.jpg" alt=""></div>
                                                            <div class="content">
                                                                <h6>زیر: اکانت جدید</h6>
                                                                <p>تغییرات زیادی در قسمت هایی از آدومکس وجود دارد. </p>
                                                            </div>
                                                            <span class="reply"><i class="zmdi zmdi-mail-reply"></i></span>
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a href="#">
                                                            <div class="image"><img src="~/layadmin/assets/images/avatar/avatar-1.jpg" alt=""></div>
                                                            <div class="content">
                                                                <h6>زیر: ایمیل پشتیبانی</h6>
                                                                <p>تغییرات زیادی در قسمت هایی از آدومکس وجود دارد. </p>
                                                            </div>
                                                            <span class="reply"><i class="zmdi zmdi-mail-reply"></i></span>
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a href="#">
                                                            <div class="image"><img src="~/layadmin/assets/images/avatar/avatar-2.jpg" alt=""></div>
                                                            <div class="content">
                                                                <h6>زیر: درخواست کالا</h6>
                                                                <p>تغییرات زیادی در قسمت هایی از آدومکس وجود دارد. </p>
                                                            </div>
                                                            <span class="reply"><i class="zmdi zmdi-mail-reply"></i></span>
                                                        </a>
                                                    </li>
                                                    <li>
                                                        <a href="#">
                                                            <div class="image"><img src="~/layadmin/assets/images/avatar/avatar-1.jpg" alt=""></div>
                                                            <div class="content">
                                                                <h6>زیر: ایمیل پشتیبانی</h6>
                                                                <p>تغییرات زیادی در قسمت هایی از آدومکس وجود دارد. </p>
                                                            </div>
                                                            <span class="reply"><i class="zmdi zmdi-mail-reply"></i></span>
                                                        </a>
                                                    </li>
                                                </ul>
                                            </div>
                                        </div>

                                    </li>

                                    <!--Notification-->
                                    <li class="adomx-dropdown col-auto">
                                        <a class="toggle" href="#"><i class="zmdi zmdi-notifications"></i><span class="badge"></span></a>

                                        <!-- Dropdown -->
                                        <div class="adomx-dropdown-menu dropdown-menu-notifications">
                                            <div class="head">
                                                <h5 class="title">شما 4 اعلان جدید دارید.</h5>
                                            </div>
                                            <div class="body custom-scroll">
                                                <ul>
                                                    <li>
                                                        <a href="#">
                                                            <i class="zmdi zmdi-notifications-none"></i>
                                                            <p>تغییرات زیادی در صفحات وجود دارد.</p>
                                                            <span>قبل ظهر 11:00   امروز</span>
                                                        </a>
                                                        <button class="delete"><i class="zmdi zmdi-close-circle-o"></i></button>
                                                    </li>

                                                </ul>
                                            </div>
                                            <div class="footer">
                                                <a href="#" class="view-all">مشاهده همه</a>
                                            </div>
                                        </div>

                                    </li>

                                    <!--User-->
                                    <li class="adomx-dropdown col-auto">
                                        <a class="toggle" href="#">
                                            <span class="user">
                                                <span class="avatar">
                                                    <img src="~/layadmin/assets/images/avatar/avatar-1.jpg" alt="">
                                                    <span class="status"></span>
                                                </span>
                                                <span class="name">@userapp.FirstName @userapp.LastName</span>
                                            </span>
                                        </a>

                                        <!-- Dropdown -->
                                        <div class="adomx-dropdown-menu dropdown-menu-user">
                                            <div class="head">
                                                <h5 class="name"><a href="#">@userapp.FirstName @userapp.LastName</a></h5>
                                                <a class="mail" href="#">@userapp.Email</a>
                                            </div>
                                            <div class="body">
                                                <ul>
                                                    <li><a href="#"><i class="zmdi zmdi-account"></i>پروفایل</a></li>
                                                    <li><a href="#"><i class="zmdi zmdi-email-open"></i>صندوق ورودی</a></li>
                                                    <li><a href="#"><i class="zmdi zmdi-wallpaper"></i>فعالیت</a></li>
                                                </ul>
                                                <ul>
                                                    <li><a href="#"><i class="zmdi zmdi-settings"></i>تنظیمات</a></li>
                                                    <li><a asp-action="Logout" asp-controller="Account"><i class="zmdi zmdi-lock-open"></i>خروج</a></li>
                                                </ul>
                                            </div>
                                        </div>

                                    </li>

                                </ul>

                            </div><!-- Header Notifications Area End -->

                        </div>
                    </div><!-- Header Right End -->

                </div>
            </div>
        </div><!-- Header Section End -->
        <!-- Side Header Start -->
        <div class="side-header show">
            <button class="side-header-close"><i class="zmdi zmdi-close"></i></button>
            <!-- Side Header Inner Start -->
            <div class="side-header-inner custom-scroll">

                <nav class="side-header-menu" id="side-header-menu">
                    <ul>
                        <li><a asp-action="Index" asp-controller="Admin"><i class="ti-home"></i> <span>خانه</span></a></li>

                        @if (userManager.IsInRoleAsync(userapp, "Admins").Result)
                        {
                            <li class="has-sub-menu">
                                <a href="#"><i class="ti-package"></i><span>مدیریت ورزشکاران</span></a>
                                <ul class="side-header-sub-menu">
                                    <li><a href="elements-alerts.html"><span>جستجو کاربران</span></a></li>
                                </ul>
                            </li>

                            <li class="has-sub-menu">
                                <a href="#"><i class="ti-package"></i><span>مدیریت مربیان</span></a>
                                <ul class="side-header-sub-menu">
                                    <li><a href="elements-alerts.html"><span>لیست مربیان</span></a></li>
                                    <li><a href="elements-accordions.html"><span>افزودن مربی حدید</span></a></li>

                                </ul>
                            </li>

                            <li class="has-sub-menu">
                                <a href="#"><i class="ti-money"></i> <span>نرخ</span></a>
                                <ul class="side-header-sub-menu">
                                    <li><a asp-action="ScheduleTypePriceManagement" asp-controller="Admin"><span>تعیین نرخ نوع برنامه</span></a></li>

                                </ul>
                            </li>
                        }
                        <li class="has-sub-menu">
                            <a href="#"><i class="ti-crown"></i> <span>برنامه های تمرینی</span></a>
                            <ul class="side-header-sub-menu">
                                <li><a asp-action="NewTrainRequestList" asp-controller="Admin"><span>بررسی درخواست های جدید</span></a></li>
                                <li><a asp-action="TrainRequestList" asp-controller="Admin"><span>لیست تمامی درخواست ها</span></a></li>


                            </ul>
                        </li>




                    </ul>
                </nav>

            </div><!-- Side Header Inner End -->
        </div><!-- Side Header End -->
        <!-- Content Body Start -->
        <div class="content-body">
            @RenderBody()

        </div><!-- Content Body End -->
        <!-- Footer Section Start -->
        <div class="footer-section">
            <div class="container-fluid">



            </div>
        </div><!-- Footer Section End -->

    </div>

    <!-- JS
    ============================================ -->
    <!-- Global Vendor, plugins & Activation JS -->
    <script src="~/layadmin/assets/js/vendor/modernizr-3.6.0.min.js"></script>
    <script src="~/layadmin/assets/js/vendor/jquery-3.3.1.min.js"></script>
    <script src="~/layadmin/assets/js/vendor/popper.min.js"></script>
    <script src="~/layadmin/assets/js/vendor/bootstrap.min.js"></script>
    <!--Plugins JS-->
    <script src="~/layadmin/assets/js/plugins/perfect-scrollbar.min.js"></script>
    <script src="~/layadmin/assets/js/plugins/tippy4.min.js.js"></script>
    <!--Main JS-->
    <script src="~/layadmin/assets/js/main.js"></script>

    <script src="~/layadmin/assets/js/plugins/select2/select2.full.min.js"></script>
    <script src="~/layadmin/assets/js/plugins/select2/select2.active.js"></script>

</body>


</html>